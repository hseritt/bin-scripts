#!/usr/bin/env bash

TS=$(date +%d%h%y-%H%M%S)

GIT="/usr/bin/git"

# must use a full path in the list
declare -a repos=(
    "/home/devuser/Coursework/ZTM-CompleteWebDeveloper"
    "/home/devuser/bin"
)

for dir in "${repos[@]}"
do
    echo "Pushing repo at ${dir} ..."
    cd $dir
    $GIT add --all 
    $GIT commit -m "Auto push to repo at ${TS}"
    $GIT push origin main
done
